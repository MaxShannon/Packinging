@model DbEfModel.CargoViewModel
@{
    ViewBag.Title = "新增入库";
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">

        $(function() {
            if (@Model.CatId == 2) {
                $('#CargoAreaId').attr({ "disabled": true });
            }
            $('#submit').click(function () {
                $('#CargoAreaId').attr({ "disabled": false });
                $.ajax({
                    url: '@Url.Action("StorageIncomingCreate")',
                    type: "Post",
                    data: $('#form').serialize(),
                    success: function(data) {
                        if (data.success === 'success') {
                            window.location.href = '@Url.Action("index")';
                            alert(data.message);
                        }
                        if (data.success === 'fail') {
                            alert(data.message);
                        }
                        $('#CargoAreaId').attr({ "disabled": true });
                    },
                    error: function(data) {
                        alert(data);
                        $('#CargoAreaId').attr({ "disabled": true });
                    }
                });
            });

        });

        $('#shipmentId').change(function(e) {
            var shipNo = $('#shipmentId').value
            console.log(shipNo)
            $('#ShipmentNo').value(shipNo)
        });


    </script>

}


