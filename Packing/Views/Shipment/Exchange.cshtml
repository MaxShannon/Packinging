@model DbEfModel.CargoViewModel
@{
    ViewBag.Title = "转移批次";
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">

        $(function () {

            $('#submit').click(function () {
                $.ajax({
                    url: '@Url.Action("Exchange")',
                    type: "Post",
                    data: $('#form').serialize(),
                    success: function(data) {
                        if (data.success === 'success') {
                            //Shipment / Index ? cargoAreaId = 3 & cargoId=1
                            window.location.href = '@Url.Action("Index","Shipment",new { cargoAreaId = Model.HuotId,cargoId = Model.CargoId  })';
                            alert(data.message);
                        }
                        if (data.success === 'fail') {
                            alert(data.message);
                        }
                    },
                    error: function(data) {
                        alert(data);
                    }
                });
            });

        });
    </script>
}



<h2>@ViewBag.Title</h2>

<form id="form" class="form-horizontal" method="post">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(a => a.ShipmentNo)
    @if (Model.HuotId != 0)
    {
        @Html.HiddenFor(a => a.HuotId)
    }
    @*@if (Model.Id != 0)
        {
            @Html.HiddenFor(a => a.Id)
        }*@
    <div class="form-horizontal">
        <h4>产品信息</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(m => m.Weight, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.Weight, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.NewHuotId, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.NewHuotId, (IEnumerable<SelectListItem>)ViewBag.HuotName, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" value="添加" class="btn btn-default" id="submit" />
            </div>
        </div>
    </div>
</form>

<div>
    @Html.ActionLink("返回", "Index")
</div>

