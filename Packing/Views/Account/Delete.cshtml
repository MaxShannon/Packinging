                @Html.DropDownListFor(model => model.PrivilegeId, (IEnumerable<SelectListItem>)ViewBag.PrivilegeName, new { @class = "form-control", @disabled = "disables" })
            </div>
        </div>*@

     


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
